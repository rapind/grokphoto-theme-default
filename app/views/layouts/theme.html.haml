!!!
%html{ 'class' => 'no-js', :lang => 'en' }
  %head
    %title= "#{yield(:meta_title).presence || 'Home'} | #{@photographer.name}"
    = stylesheet_link_tag 'theme'
    = javascript_include_tag 'theme'
    = csrf_meta_tags
  %body{ :class => "blue #{yield(:body_class).presence}" }
    #container
      #header
        #logo
          %a{ :href => root_path, :title => @photographer.name }
            = image_tag('theme_default/blue/logo.png', :alt => @photographer.name)
        %ul#top_nav
          - @portfolios.each do |portfolio|
            %li= link_to(portfolio.title, portfolio_path(portfolio))
          - @pages.each do |page|
            %li= link_to(page.title, page_path(page))
          - unless @photographer.blog_url.blank?
            %li= link_to('Blog', @photographer.blog_url)
      #main
        #content
          - if alert
            .alert-message.error= alert
          - elsif notice
            .alert-message.info= notice
          = yield
      #footer
        .footer_logo
          %a{ :href => root_path }
            = image_tag('theme_default/blue/footer_logo.png', :alt => @photographer.name)
        #copyright
          Copyright &copy; 2011
          %a{ :href => root_path }= @photographer.name
          | All rights Reserved
        #grokphoto= link_to('powered by: GrokPhoto', 'http://grokphoto.org', :target => '_blank')
